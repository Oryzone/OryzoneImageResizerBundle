<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oryzone_imageresizer.temp">%kernel.cache_dir%/imageresizer/</parameter>
    </parameters>

    <services>
        <service id="imageresizer" class="Oryzone\Bundle\ImageResizerBundle\Image\ImageResizer" >
            <argument type="service" id="imagine"/>
            <argument type="string">%oryzone_imageresizer.temp%</argument>
            <argument type="string">%oryzone_imageresizer.defaultformats%</argument>
        </service>
    </services>
</container>